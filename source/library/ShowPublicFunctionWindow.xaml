<Window x:Class="Example.ShowPublicFunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:this="clr-namespace:Example"
        Title="Show-PublicFunction"
        Height="200"
        Width="400"
        FocusManager.FocusedElement="{Binding ElementName=tbInput}">
        <Grid>
                <!-- TODO Add Labels and Decorators -->
                <TextBox x:Name="tbInput"
                        Height="25"
                        HorizontalAlignment="Left"
                        Margin="100,50,0,0"
                        VerticalAlignment="Top"
                        Width="200"/>
                <Button x:Name="btSubmit"
                        Content="Submit"
                        Height="25"
                        HorizontalAlignment="Left"
                        Margin="200,100,0,0"
                        VerticalAlignment="Top"
                        Width="100"
                        IsDefault="true"
                        Click="Button_Click"/>
        </Grid>
</Window>
