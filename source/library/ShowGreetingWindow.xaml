<Window x:Class="PoshGUIExample.ShowGreeting.ShowGreetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:this="clr-namespace:PoshGUIExample.ShowGreeting"
        Title="Show-Greeting"
        Height="112" Width="275"
        FocusManager.FocusedElement="{Binding ElementName=tbInput}">
        <Grid Margin="5">
                <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                        Content="Enter Name:"
                        Margin="2"
                        Grid.Row="0" Grid.Column="0" />
                <TextBox x:Name="tbInput"
                        Margin="2"
                        Grid.Row="0" Grid.Column="1" />

                <Button x:Name="btReset"
                        Content="Reset"
                        Click="Button_Reset"
                        Margin="2"
                        Grid.Row="1" Grid.Column="0" />
                <Button x:Name="btSubmit"
                        IsDefault="true"
                        Content="Submit"
                        Click="Button_Submit"
                        Margin="2"
                        Grid.Row="1" Grid.Column="1" />
        </Grid>
</Window>
